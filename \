console.log("Hello World!");

function gibNambe() {
  let uname = prompt("Gimme your name");
  document.getElementById("greet").innerHTML = `Hello ${uname}`; // thanks JS for deprecating a variable name
}

function suminator() {
  let input = 0;
  let sum = 0;
  for (let i = 0; i < 3; i++) {
    input = parseInt(prompt(`Gimme integers ${i}`));
    if (input == NAN) { i--; continue; }
    sum += input
  }
  document.getElementById("sum").innerHTML = `sum of those is ${sum}`;
}

function nerd(name) {
  let ran = Math.round(Math.random() * 3); //0,1,2,3  so 4 integer outcomes
  let nerd = "";
  switch (ran) {
    case 0:
      nerd = "nerdstyle 1";
      break;
    case 1:
      nerd = "nerdstyle 2";
      break;
    case 2:
      nerd = "nerdstyle 3";
      break;
    case 3:
      nerd = "nerdstyle 4";
      break;
  }
  document.getElementById("nerd").innerHTML = `${name}, you're a ${nerd}`;
}

function humanitysMistake() {
  let year = parseInt(prompt("gimme a year"));
  if (year == NAN) {
    humanitysMistake(); // NOTE: check to see if recursiveness works this way too
    return; //how do you throw away
  }
}
